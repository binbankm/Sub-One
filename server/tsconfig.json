{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "..",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "..",
        "paths": {
            "@lib/*": [
                "lib/*"
            ]
        }
    },
    "include": [
        "backend/**/*",
        "../lib/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}